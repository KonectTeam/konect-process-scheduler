{
    "compilerOptions": {
      "module": "ES2015",
      "experimentalDecorators": true,
      "target": "ES2017",
      "lib": ["es2017"],
      "declaration": false,
      "noImplicitAny": false,
      "removeComments": true,
      "inlineSourceMap": true,
      "moduleResolution": "node"
    },
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "include": ["scripts/**/*.ts", "src/**/*.ts", "node_modules/lodash-es/**/*.js"]
  }